<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded"
    >

  <android.support.design.widget.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      app:elevation="0dp"
      >

    <android.support.design.widget.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
        ><!--这几个可以看收藏夹里面简书-->

      <ImageView
          android:id="@+id/iv"
          android:layout_width="match_parent"
          android:layout_height="300dp"
          android:scaleType="centerCrop"
          android:src="@mipmap/ic_launcher"
          app:layout_collapseMode="parallax"
          app:layout_collapseParallaxMultiplier="0.9"
          /><!--layout_collapseParallaxMultiplier设置视差系数-->

      <FrameLayout
          android:id="@+id/frameLayout"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_gravity="bottom|center_horizontal"
          android:background="#000000"
          android:orientation="vertical"
          app:layout_collapseMode="parallax"
          app:layout_collapseParallaxMultiplier="0.3"
          >

      </FrameLayout><!--collapseMode 设置折叠模式 而且这几个只能放到toolBar上面才有效果-->
    </android.support.design.widget.CollapsingToolbarLayout>
  </android.support.design.widget.AppBarLayout>

  <android.support.v7.widget.Toolbar
      android:id="@+id/main.toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/colorAccent"
      app:layout_anchor="@id/frameLayout"
      app:theme="@style/ThemeOverlay.AppCompat.Dark"
      ><!--anchor 标识toolbar将显示在framelaout所在的地方-->
  </android.support.v7.widget.Toolbar>

  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="none"
      app:behavior_overlapTop="0dp"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"

      ><!--
      behavior_overlapTop:scrollview的区域内容将会超出滑动区域，伸入上面的部分区域
      被包裹的滑动view都需要添加@string/appbar_scrolling_view_behavior-->

    <include layout="@layout/layout_main"/>
  </android.support.v4.widget.NestedScrollView>



  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/iv_avatar"
      android:layout_width="@dimen/image_width"
      android:layout_height="@dimen/image_width"
      android:layout_gravity="center_horizontal"
      android:src="@drawable/avator"
      app:border_color="@android:color/white"
      app:border_width="2dp"
      app:finalHeight="50dp"
      app:layout_behavior=".CustomBehavior"
      />


  <TextView

      android:visibility="invisible"
      android:id="@+id/tv_title"
      android:textColor="#fff"
      android:textSize="18sp"
      android:gravity="center"
      android:text="头条"
      app:layout_behavior=".DrawerBehavior"
      android:background="@color/primaryDark"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      >

  </TextView>


</android.support.design.widget.CoordinatorLayout>
